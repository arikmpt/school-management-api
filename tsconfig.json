{
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "declaration": true,
      "baseUrl": ".",
      "paths": {
          "@routers" : [
            "src/routers"
          ],
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}